<h1>Manage your account settings</h1>

<%= form_for @patient do | f | %>

  <fieldset>
    <%= f.label :name  %>
    <%= f.text_field :name %>
  </fieldset>

  <fieldset>
    <%= f.label :dob %>
    <%= f.text_field :dob %>
  </fieldset>

  <fieldset>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </fieldset>

  <fieldset>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </fieldset>

  <fieldset>
    <%= f.label :medicare %>
    <%= f.text_field :medicare %>
  </fieldset>

  <fieldset>
    <%= f.label :health_fund %>
    <%= f.text_field :health_fund %>
  </fieldset>

  <fieldset>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </fieldset>

<% end %>
