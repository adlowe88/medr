<h1>Create a new referral!!</h1>

<%= form_for @referral, url: {action: "create"} do | f | %>

  Recipient:
  <%= f.collection_select(:referee_id, Doctor.all, :id, :name) %>

  <fieldset>
    When:
    <%= f.label :time %>
    <%= f.text_field :time%>
  </fieldset>


  <fieldset>
    For:
    <%= f.label :patient_id %>
    <%= f.select :patient_id, Patient.pluck(:name, :id), :include_blank => true %>
  </fieldset>

  <fieldset>
    Patient ID#:
    <%= f.label :patient_id %>
    <%= f.select :patient_id, Patient.pluck(:id), :include_blank => true %>
  </fieldset>

  <fieldset>
    <%= f.submit "Create Referral" %>
  </fieldset>
<% end %>
